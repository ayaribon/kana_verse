<script>
  document.addEventListener('DOMContentLoaded', function() {
    const buttons = document.querySelectorAll('.key');
    const inputField = document.getElementById('hiragana-input');

    buttons.forEach(button => {
      button.addEventListener('click', function() {
        const hiragana = this.getAttribute('data-hiragana');
        inputField.value += hiragana;
        console.log("Current input:", inputField.value);  // デバッグ用
      });
    });
  });

  // 変換ボタンがクリックされた時の処理
  document.getElementById('convert-button').addEventListener('click', () => {
    const hiraganaInput = document.getElementById('hiragana-input').value;

    // Ajaxリクエストでサーバーにひらがなを送信
    fetch('/hiragana_conversions/convert', {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
      },
      body: JSON.stringify({ hiragana: hiraganaInput })
    })
    .then(response => response.json())
    .then(data => {
      console.log("Response data:", data);  // サーバーからのレスポンス確認用
      document.getElementById('output').value = data.lao_text;
    })
    .catch(error => {
      console.error('変換エラー:', error);
    });
  });

  // 一文字削除ボタン
  document.getElementById("deleteButton").addEventListener("click", function() {
    const inputField = document.getElementById("hiragana-input");
    const currentValue = inputField.value;
    const updatedValue = [...currentValue].slice(0, -1).join('');
    inputField.value = updatedValue;
  });
</script>
