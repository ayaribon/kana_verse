<div class="container mx-auto p-10">
  <h2 class="text-2xl mb-4">Login</h2>
  <%= form_with url: login_path, method: :post, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :email, class: 'block' %>
      <%= form.email_field :email, class: 'border rounded w-full p-2' %>
    </div>
    <div class="mb-4">
      <%= form.label :password, class: 'block' %>
      <%= form.password_field :password, class: 'border rounded w-full p-2' %>
    </div>
    <div>
      <%= form.submit 'Login', class: 'bg-blue-500 text-white px-4 py-2 rounded' %>
    </div>
  <% end %>
  <p class="mt-4">New here? <%= link_to 'Sign up', new_user_path %></p>
</div>
