<div class="container mx-auto mt-5">
  <h1 class="text-2xl font-bold">新規登録</h1>

  <%= form_with model: @user, local: true do |form| %>
    <% if @user.errors.any? %>
      <div class="bg-red-500 text-white p-3 mb-4">
        <h2 class="font-bold">エラー</h2>
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700" %>
      <%= form.text_field :nickname, class: "mt-1 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :password, class: "block text-gray-700" %>
      <%= form.password_field :password, class: "mt-1 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div class="mb-4">
      <%= form.label :password_confirmation, class: "block text-gray-700" %>
      <%= form.password_field :password_confirmation, class: "mt-1 block w-full border border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.submit '登録', class: "bg-blue-500 text-white p-2 rounded" %>
    </div>
  <% end %>
</div>